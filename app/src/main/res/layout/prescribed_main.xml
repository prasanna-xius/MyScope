<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >

    <include layout="@layout/app_bar_main" />

    <include layout="@layout/background_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_10">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/is_prescribed"
            android:textColor="@color/bg_screen2"
            android:textSize="@dimen/dimen_15" />

        <Spinner
            android:id="@+id/is_prescribed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_4"
            android:textSize="15sp"
            android:popupBackground="@color/colorWhite"
            android:background="@drawable/edittext_border"/>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/doctor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="@dimen/dimen_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/doctor_name"
            android:textColor="@color/bg_screen2"
            android:textSize="@dimen/dimen_15" />

        <EditText
            android:id="@+id/doctor_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_4"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:textSize="15sp"
            android:textColor="@color/bg_screen2"
            android:background="@drawable/edittext_border"
            />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/hosp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="@dimen/dimen_10"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hospital_name"
            android:textColor="@color/bg_screen2"
            android:textSize="@dimen/dimen_15"
            />

        <EditText
            android:id="@+id/hosp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:padding="@dimen/dimen_4"
            android:textSize="15sp"
            android:textColor="@color/bg_screen2"
            android:background="@drawable/edittext_border"

            />
    </LinearLayout>
        <LinearLayout

            android:id="@+id/pharmacy_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="@dimen/dimen_10"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pharmacy_name"
                android:textColor="@color/bg_screen2"
                android:textSize="@dimen/dimen_15"
                />

            <EditText
                android:id="@+id/pharmacy_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:padding="@dimen/dimen_4"
                android:textSize="15sp"
                android:textColor="@color/bg_screen2"
                android:background="@drawable/edittext_border"

                />
        </LinearLayout>

    <Button
        android:id="@+id/prescription_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:backgroundTint="#1F78D3"
        android:text="Save"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"
        />

    </LinearLayout>


</LinearLayout>