<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <!--    <include layout="@layout/app_bar_main" />-->
    <include layout="@layout/background_image" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_10"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_16"
            android:text="Prescription"
            android:textAllCaps="true"
            android:textColor="@color/bg_screen2"
            android:textSize="30sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/is_prescribed"
                android:textColor="@color/bg_screen2"
                android:textSize="@dimen/dimen_15" />
            <Spinner
                android:id="@+id/is_prescribed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dimen_4"
                android:textSize="15sp"
                android:popupBackground="@color/colorWhite"
                android:background="@drawable/edittext_border"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/doctor_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="@dimen/dimen_10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/doctor_name"
                android:textColor="@color/bg_screen2"
                android:textSize="@dimen/dimen_15" />
            <EditText
                android:id="@+id/et_doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dimen_4"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:textSize="15sp"
                android:textColor="@color/bg_screen2"
                android:background="@drawable/edittext_border"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hosp_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="@dimen/dimen_10"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hospital_name"
                android:textColor="@color/bg_screen2"
                android:textSize="@dimen/dimen_15" />
            <EditText
                android:id="@+id/et_hosp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:padding="@dimen/dimen_4"
                android:textSize="15sp"
                android:textColor="@color/bg_screen2"
                android:background="@drawable/edittext_border"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/medical_condition"
                android:textColor="@color/bg_screen2"
                android:textSize="@dimen/dimen_15" />
            <EditText
                android:id="@+id/et_medical_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:inputType="text"
                android:padding="@dimen/dimen_4"
                android:textColor="@color/bg_screen2"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/prescription_note"
                android:textColor="@color/bg_screen2"
                android:textSize="@dimen/dimen_15" />
            <EditText
                android:id="@+id/et_precsription_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:gravity="left"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:lines="4"
                android:padding="@dimen/dimen_4"
                android:textColor="@color/bg_screen2"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/adddrug"
                android:textStyle="bold"
                android:textColor="@color/bg_screen2"
                android:textSize="@dimen/dimen_24sp" />
            <TextView
                android:id="@+id/add_drug"
                android:layout_width="@dimen/dimen_75"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/add_drug"
                android:layout_gravity="right"
                />
        </LinearLayout>
        <include layout="@layout/content_main" />
    </LinearLayout>
</LinearLayout>