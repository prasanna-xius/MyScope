<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/app_bar_main"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activities.prescription.Prescription_manual">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/background_image" />
            <!--        <Button-->
            <!--            android:layout_width="50dp"-->
            <!--            android:layout_height="50dp"-->
            <!--            android:background="@drawable/edit_icon1"-->
            <!--            android:layout_gravity="right"-->
            <!--            android:id="@+id/editbutton"-->
            <!--            android:layout_marginRight="@dimen/dimen_20"-->
            <!--            />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/prescription_manual"
                android:textAllCaps="true"
                android:textColor="@color/colortext"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/parentview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/formulation"
                        android:textColor="@color/colortext"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/formulation_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:padding="@dimen/dimen_4"
                        android:popupBackground="@color/colorWhite" />
                    <!--                    android:paddingRight="1dp"-->
                    <!--                    android:paddingLeft="@dimen/dimen_2"-->
                    <!--                    android:paddingTop="@dimen/dimen_2"-->
                    <!--                    android:paddingBottom="@dimen/dimen_2"-->


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/brand_name"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/brand_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:padding="@dimen/dimen_4"
                        android:textColor="@color/colortext"
                        android:textColorHint="@color/colortext"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/drug_name"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/drug_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:padding="@dimen/dimen_4"
                        android:textColor="@color/colortext"
                        android:textColorHint="@color/colortext"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dose_strength"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dose_strength"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:hint="500"
                        android:inputType="number"
                        android:padding="@dimen/dimen_4"
                        android:textColor="@color/colortext"
                        android:textColorHint="@color/colortext"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dose_unit"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/dose_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:padding="@dimen/dimen_4"
                        android:popupBackground="@color/colorWhite" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/how_often_taken"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <com.example.myscope.activities.MultiSelectionSpinner
                        android:id="@+id/how_often_taken"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:entries="@array/how_often_taken"
                        android:padding="@dimen/dimen_4"
                        android:popupBackground="@color/colorWhite"
                        android:textSize="15sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/time"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/time_of_taken"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:padding="@dimen/dimen_4"
                        android:textColor="@color/colortext"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <Button
                        android:id="@+id/addtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="right"
                        android:text="+Add Time"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_20"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/start_date"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:inputType="date"
                        android:padding="@dimen/dimen_4"
                        android:textColor="@color/colortext"
                        android:textSize="15sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/stop_date"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/stop_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:inputType="date"
                        android:padding="@dimen/dimen_4"
                        android:textColor="@color/colortext"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medical_condition"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/medical_condition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:inputType="text"
                        android:padding="@dimen/dimen_4"
                        android:textColor="@color/colortext"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/is_prescribed"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/is_prescribed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:padding="@dimen/dimen_4"
                        android:popupBackground="@color/colorWhite"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/doctor_name"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/doctor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:padding="@dimen/dimen_4"
                        android:textColor="@color/colortext"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hospital_name"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/hosp_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:padding="@dimen/dimen_4"
                        android:textColor="@color/colortext"
                        android:textSize="15sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prescription_note"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/precsription_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="left"
                        android:importantForAutofill="no"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:padding="@dimen/dimen_4"
                        android:textColor="@color/colortext"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/prescription_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/background_button"
                        android:backgroundTint="@color/colortext"
                        android:padding="@dimen/dimen_10"
                        android:text="Save"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/prescription_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_button"
                        android:backgroundTint="#1F78D3"
                        android:text="Update"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/prescription_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_button"
                        android:backgroundTint="@color/colortext"
                        android:text="Update"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>