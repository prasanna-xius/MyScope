<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >
    <!--    <include layout="@layout/app_bar_main"></include>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".activities.prescription.Prescription_manual"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <include layout="@layout/background_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/prescription_manual"
                android:textSize="30sp"
                android:layout_margin="@dimen/dimen_10"

                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/bg_screen2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/is_prescribed"
                    android:textColor="@color/bg_screen2"
                    android:textSize="@dimen/dimen_15" />

                <Spinner
                    android:id="@+id/is_prescribed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dimen_4"
                    android:textSize="15sp"
                    android:popupBackground="@color/colorWhite"
                    android:background="@drawable/edittext_border"/>

            </LinearLayout>

            <LinearLayout

                android:id="@+id/doctor_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/dimen_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/doctor_name"
                    android:textColor="@color/bg_screen2"
                    android:textSize="@dimen/dimen_15" />

                <EditText
                    android:id="@+id/et_doctor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dimen_4"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                    android:textSize="15sp"
                    android:textColor="@color/bg_screen2"
                    android:background="@drawable/edittext_border"
                    />

            </LinearLayout>

            <LinearLayout

                android:id="@+id/hosp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/dimen_10"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hospital_name"
                    android:textColor="@color/bg_screen2"
                    android:textSize="@dimen/dimen_15" />

                <EditText
                    android:id="@+id/et_hosp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                    android:padding="@dimen/dimen_4"
                    android:textSize="15sp"
                    android:textColor="@color/bg_screen2"
                    android:background="@drawable/edittext_border"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/medical_condition"
                    android:textColor="@color/bg_screen2"
                    android:textSize="@dimen/dimen_15" />

                <EditText
                    android:id="@+id/et_medical_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_border"
                    android:inputType="text"
                    android:padding="@dimen/dimen_4"
                    android:textColor="@color/bg_screen2"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/prescription_note"
                    android:textColor="@color/bg_screen2"
                    android:textSize="@dimen/dimen_15" />

                <EditText
                    android:id="@+id/et_precsription_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_border"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:gravity="left"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:padding="@dimen/dimen_4"
                    android:textColor="@color/bg_screen2"
                    android:textSize="15sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"

                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/adddrug"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/bg_screen2"/>

                <TextView
                    android:id="@+id/add_drug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_add_circle_black_24dp"
                    android:layout_gravity="end"/>


            </LinearLayout>

            <include layout="@layout/content_main" />




        </LinearLayout>
    </ScrollView>
</LinearLayout>





