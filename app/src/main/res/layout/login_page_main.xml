<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1_login"
    android:orientation="vertical">

    <View
        android:id="@+id/opacityFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:alpha="0.7"
        android:background="@android:color/background_light"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/dimen_106"
            android:layout_height="@dimen/dimen_106"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_96"
            android:src="@drawable/logo1"
            app:civ_border_color="#D8613B"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_5"
                android:gravity="end"
                android:text="My"
                android:textColor="#8ACE40"
                android:textSize="@dimen/dimen_18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Scope"
                android:textColor="#DB5E35"
                android:textSize="@dimen/dimen_18"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="@dimen/dimen_24"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18"
                android:text="Login with OTP"
                android:textColor="#756161"
                android:textSize="@dimen/dimen_24"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/mobile_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginTop="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_24"
                android:background="@drawable/background_edittext"
                android:hint="Enter Mobile Number"
                android:inputType="phone"
                android:textColorHint="#80000000"
                android:paddingLeft="@dimen/dimen_18"
                android:textColor="#000000" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_otp_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24"
                android:layout_marginRight="@dimen/dimen_24"
                android:textColor="#000000"
                android:background="@drawable/background_button"
                android:text="Send Otp"
                android:textSize="@dimen/dimen_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Number?"
                android:textColor="#000000"
                android:id="@+id/change_mobile_btn"
                android:visibility="invisible"
                android:layout_marginRight="@dimen/dimen_24"
                android:gravity="end"
                android:textSize="@dimen/dimen_18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_24"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_24"
                android:orientation="horizontal">

                <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_2"
                    android:layout_weight="2"
                    android:background="#80000000"
                />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Don't have an Account? Register here"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dimen_2"
                    android:textSize="@dimen/dimen_16"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_2"
                    android:background="#80000000"
                    android:layout_weight="2"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_24"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_24"
                android:orientation="horizontal">



                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:id="@+id/btn_facebook"
                    android:layout_height="@dimen/dimen_40"
                    android:text="Continue using Facebook"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:drawableRight="@drawable/fbicon"
                    android:background="@drawable/button_facebook"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dimen_5"
                    android:textSize="@dimen/dimen_16"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:id="@+id/btn_google"
                    android:layout_height="@dimen/dimen_40"
                    android:text="Google Signin"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:drawableRight="@drawable/google_icon"
                    android:background="@drawable/button_google"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dimen_5"
                    android:textSize="@dimen/dimen_16"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>