<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_350"
        android:background="@drawable/login_background">


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="vertical">

        <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="@dimen/dimen_106"
            android:layout_gravity="center"
            android:src="@drawable/myscopelogo"
           />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="center"
            android:text="Login Page"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_24"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_35"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_35"
            android:background="@color/colorWhite"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mobile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:layout_marginRight="@dimen/dimen_16"
                    android:textColorHint="@color/bluegray700"
                    card_view:errorTextAppearance="@style/error_appearance">


                    <EditText
                        android:id="@+id/mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:hint="Enter Mobile Number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:digits="@string/mobile"
                        android:paddingLeft="@dimen/dimen_8"
                        android:paddingTop="@dimen/dimen_8"
                        android:textSize="@dimen/dimen_16sp"
                        android:backgroundTint="@color/jet_black"
                        android:textColor="@color/colorBackground"
                        android:textColorHint="@color/bluegray700" />



                </com.google.android.material.textfield.TextInputLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_otp_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:layout_marginRight="@dimen/dimen_40"
                    android:background="@drawable/background_button"
                    android:backgroundTint="#1D2F47"
                    android:text="Send Otp"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dimen_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/change_mobile_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_30"
                    android:gravity="end"
                    android:text="Change Number?"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_14"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_18"
                    android:layout_marginBottom="@dimen/dimen_40"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Don't have an Account? Register here"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_14"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_10"
            android:gravity="bottom"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dimen_35"
                android:layout_marginTop="@dimen/dimen_75"
                android:layout_marginRight="@dimen/dimen_35"
                android:background="@color/colorWhite"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_facebook1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_marginLeft="@dimen/dimen_8"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:layout_marginBottom="@dimen/dimen_15"
                        android:layout_weight="1"
                        android:background="@drawable/button_facebook"
                        android:drawableRight="@drawable/fblogo1"
                        android:gravity="center"
                        android:text="Continue using Facebook"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_google1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_marginRight="@dimen/dimen_8"
                        android:layout_weight="1"
                        android:background="@drawable/button_google"
                        android:drawableRight="@drawable/google_icon1"
                        android:gravity="center"
                        android:paddingRight="@dimen/dimen_10"
                        android:text="Google Signin"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>