<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1_login"
    android:orientation="vertical">

    <View
        android:id="@+id/opacityFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:alpha="0.7"
        android:background="@android:color/background_light"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/dimen_106"
            android:layout_height="@dimen/dimen_106"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_96"
            android:src="@drawable/logo1"
            app:civ_border_color="#D8613B"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_5"
                android:gravity="end"
                android:text="My"
                android:textColor="#8ACE40"
                android:textSize="@dimen/dimen_18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Scope"
                android:textColor="#DB5E35"
                android:textSize="@dimen/dimen_18"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="@dimen/dimen_24"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18"
                android:text="OTP Page "
                android:gravity="center"
                android:textColor="#756161"
                android:textSize="@dimen/dimen_24"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/mobile_number"
                android:layout_width="155dp"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginTop="@dimen/dimen_30"
                android:background="@drawable/background_edittext"
                android:hint="Enter OTP Here"
                android:minEms="6"
                android:layout_gravity="center"
                android:textColorHint="#80000000"
                android:inputType="textPassword"
                android:gravity="center"
                android:textColor="#000000" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_verify_otp"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:background="@drawable/background_button"
                android:text="Verify OTP"
                android:textSize="@dimen/dimen_16" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>