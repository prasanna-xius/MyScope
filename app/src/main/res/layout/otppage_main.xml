<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1_login"
    android:orientation="vertical">

    <View
        android:id="@+id/opacityFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:alpha="0.7"
        android:background="@android:color/background_light"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/dimen_106"
                    android:layout_height="@dimen/dimen_106"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_85"
                    android:src="@drawable/logo1"
                    app:civ_border_color="#4B73B0"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:gravity="end"
                        android:text="My"
                        android:textColor="#8ACE40"
                        android:textSize="@dimen/dimen_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Scope"
                        android:textColor="#2879FE"
                        android:textSize="@dimen/dimen_18"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="@dimen/dimen_24"
                    android:layout_marginRight="@dimen/dimen_24"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_18"
                        android:gravity="center"
                        android:text="OTP Page "
                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_24"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_otp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_35"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:background="@drawable/background_edittext"
                        android:gravity="center"
                        android:text="123456"
                        android:hint="Enter OTP Here"
                        android:inputType="textPassword"
                        android:textColor="#000000"
                        android:textColorHint="#80000000" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_verify_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_30"
                        android:layout_marginLeft="@dimen/dimen_30"
                        android:layout_marginTop="@dimen/dimen_24"
                        android:background="@drawable/background_button"
                        android:text="Verify OTP"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/dimen_16" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>