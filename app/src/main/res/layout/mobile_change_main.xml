<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_300"
        android:background="@drawable/login_background">


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="vertical">

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="@dimen/dimen_106"
            android:layout_gravity="center"
            android:src="@drawable/myscopelogo"
             />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24"
            android:gravity="center"
            android:text="Change Mobile Number"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_24sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_35"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_35"
            android:background="@color/colorWhite"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mobile_change_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:layout_marginRight="@dimen/dimen_16"
                    android:textColorHint="@color/bluegray700"
                    card_view:errorTextAppearance="@style/error_appearance">


                    <EditText
                        android:id="@+id/edt_register_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_35"
                        android:hint="Enter Register Email"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/dimen_8"
                        android:singleLine="true"
                        android:paddingTop="@dimen/dimen_8"
                        android:textSize="@dimen/dimen_16sp"
                        android:backgroundTint="@color/jet_black"
                        android:textColor="@color/color_black"
                        android:maxLength="40"
                        android:textColorHint="@color/bluegray700" />



                </com.google.android.material.textfield.TextInputLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_send_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:layout_marginRight="@dimen/dimen_40"
                    android:layout_marginBottom="@dimen/dimen_40"
                    android:background="@drawable/background_button"
                    android:text="send link"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dimen_14" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_10"
            android:gravity="bottom"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="Your Medication Expert"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimen_16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>