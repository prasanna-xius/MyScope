<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_350"
        android:background="@drawable/login_background">


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="vertical">

        <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/dimen_275"
            android:layout_height="@dimen/dimen_106"
            android:layout_gravity="center"
            android:src="@drawable/myscope_logo_white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center"
            android:text="Verifying Mobile"
            android:textColor="@color/colorBackground"
            android:textSize="@dimen/dimen_24"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_35"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_35"
            android:background="@color/colorWhite"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mobile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:layout_marginRight="@dimen/dimen_16"
                    android:textColorHint="@color/bluegray700"
                    card_view:errorTextAppearance="@style/error_appearance">


                    <EditText
                        android:id="@+id/mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:hint="Enter Mobile Number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:digits="@string/mobile"
                        android:paddingLeft="@dimen/dimen_8"
                        android:paddingTop="@dimen/dimen_8"
                        android:textSize="@dimen/dimen_14sp"
                        android:backgroundTint="@color/colorText"
                        android:textColor="@color/colorBackground"
                        android:textColorHint="@color/bluegray700" />


                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_25"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/colorBackground"
                    android:text="First Name"
                    android:gravity="center|start"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/first_name"
                    android:paddingLeft="@dimen/dimen_25"
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/colorBackground"
                    android:text="name"
                    android:gravity="center|start"
                    android:layout_marginTop="@dimen/dimen_8"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@color/jet_black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_25"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/colorBackground"
                    android:text="Last Name"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:gravity="center|start"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/last_name"
                    android:paddingLeft="@dimen/dimen_25"
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/colorBackground"
                    android:text="last name"
                    android:gravity="center|start"
                    android:layout_marginTop="@dimen/dimen_8"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@color/jet_black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_25"
                    android:gravity="center|start"
                    android:textSize="@dimen/dimen_16sp"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:textColor="@color/colorBackground"
                    android:text="Email"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_25"
                    android:gravity="center|start"
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/colorBackground"
                    android:id="@+id/email"
                    android:text="email"
                    android:layout_marginTop="@dimen/dimen_8"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@color/jet_black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:paddingLeft="@dimen/dimen_25"
                    android:gravity="center|start"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/colorBackground"
                    android:id="@+id/userId"
                    android:visibility="gone"
                    android:text="userId"
                    android:layout_marginTop="20dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_otp_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:layout_marginRight="@dimen/dimen_40"
                    android:background="@drawable/background_button"
                    android:backgroundTint="#1D2F47"
                    android:text="Send Otp"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:textSize="@dimen/dimen_14" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/otp_layout_gmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_15"
                    card_view:passwordToggleEnabled="true"
                    card_view:passwordToggleTint="@color/jet_black"
                    android:layout_marginRight="@dimen/dimen_16"
                    android:textColorHint="@color/bluegray700"
                    card_view:errorTextAppearance="@style/error_appearance">


                    <EditText
                        android:id="@+id/edt_otp_gmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/dimen_8"
                        android:paddingTop="@dimen/dimen_8"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:backgroundTint="@color/jet_black"
                        android:textColor="@color/color_black"
                        android:textColorHint="@color/bluegray700"
                        android:hint="Enter OTP Here"
                        android:inputType="numberPassword"
                        android:textSize="@dimen/dimen_16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_verify_otp_gmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_18"
                    android:layout_marginRight="@dimen/dimen_40"
                    android:layout_marginBottom="@dimen/dimen_40"
                    android:background="@drawable/background_button"
                    android:backgroundTint="#1D2F47"
                    android:text="Verify OTP"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dimen_14sp" />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:id="@+id/progressBar_gmail"
                    />

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>/
    </LinearLayout>
</RelativeLayout>