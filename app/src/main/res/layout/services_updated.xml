<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/app_bar_main" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="128sp"
        android:background="#fff"
        android:src="@drawable/wave_scaled" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:text="@string/services_title"
        android:textColor="@color/bg_screen2"
        android:textSize="30sp" />


    <LinearLayout

        android:gravity="center_horizontal"
        android:id="@+id/row1"
        android:orientation="horizontal"
        android:weightSum="2.0"
        android:background="@color/colorWhite"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="12dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:id="@+id/patient_counseling_card"
            android:layout_margin="8dp"

            android:layout_gravity="center">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkbox_patient_counselling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#997CF4"
                android:layout_gravity="right" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#fff"
                android:weightSum="3.0"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_weight="2.0"
                    android:src="@drawable/patient_counseling"
                    android:layout_height="wrap_content">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:textColor="@color/colorText"
                    android:text="@string/patient_counseling"
                    android:textSize="14dp"/>

            </LinearLayout>

</LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            app:cardBackgroundColor="#ffffff"
            android:layout_height="match_parent"

            android:layout_weight="1.0"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:id="@+id/Drug_interaction_card"
            android:layout_margin="8dp"
            android:layout_gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_drug_interaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bg_screen2"
                android:layout_gravity="right" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="3.0"
                android:layout_gravity="center"
                android:background="#fff"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="2.0"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:background="@color/colorWhite"
                    android:src="@drawable/antibiotic"
                    android:layout_height="wrap_content">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_weight="1.0"
                    android:text="@string/drug_interaction"
                    android:textSize="14dp"/>

            </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout

        android:id="@+id/llchild3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/colorWhite"
        android:weightSum="1.0"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/Adverse_Drug_Event_monitoring"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginLeft="5dp"
            app:cardBackgroundColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/cardbg"
            android:clickable="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_adverse_drug_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bg_screen2"
                android:layout_gravity="right" />

            <LinearLayout
                android:id="@+id/Prescription_Audit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#fff"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="2.0">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:src="@drawable/vitamin">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:textColor="@color/colorText"
                    android:text="@string/adverse_drug_event_monitoring"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout

        android:gravity="center_horizontal"
        android:id="@+id/llchild2"
        android:orientation="horizontal"
        android:weightSum="2.0"
        android:background="@color/colorWhite"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="12dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:id="@+id/Prescription_audit"
            android:layout_margin="8dp"
            android:layout_gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_prescription_audit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bg_screen2"
                android:layout_gravity="right" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#fff"
                android:weightSum="3.0"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"

                    android:background="@color/colorWhite"
                    android:src="@drawable/audit"
                    android:layout_height="wrap_content">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:textColor="@color/colorText"
                    android:text="@string/prescription_audit"
                    android:textSize="14dp"/>

            </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            app:cardBackgroundColor="#ffffff"
            android:layout_height="match_parent"

            android:layout_weight="1.0"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:id="@+id/Post_discharge_Care_Package_card"
            android:layout_margin="8dp"
            android:layout_gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_Post_discharge_care_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bg_screen2"
                android:layout_gravity="right" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="3.0"
                android:layout_gravity="center"
                android:background="#fff"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="2.0"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/examination"
                    android:layout_height="wrap_content">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_weight="1.0"
                    android:text="@string/post_discharge_care_package"
                    android:textSize="14dp"/>

            </LinearLayout>

</LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <Button
        android:id="@+id/btn_Services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@drawable/background_button"
        android:text="AGREE"
        android:textColor="@color/colorWhite" />


</LinearLayout>
