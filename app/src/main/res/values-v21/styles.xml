<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePicker</item>

    </style>


    <style name="Edittext_Editable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_35</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/bluegray700</item>
        <item name="android:textColorHint">@color/bluegray300</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:elevation">@dimen/dimen_5</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:drawablePadding">@dimen/dimen_10</item>
        <item name="android:paddingLeft">@dimen/dimen_10</item>
        <item name="android:paddingRight">@dimen/dimen_10</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="colorAccent">@color/bg_screen2</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/bg_screen2</item>
        <item name="android:layout_width">@dimen/dimen_100</item>
        <item name="android:layout_height">@dimen/dimen_100</item>


    </style>

    <style name="MyProgressTheme"  parent="Theme.AppCompat.Light.Dialog.Alert">

<!--        <item name="android:textColorPrimary">#000000</item>-->
<!--        <item name="android:alertDialogStyle">@style/background</item>-->

        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/bg_screen2</item>

    </style>

    <style name="background" >
        <item name="android:background">@color/bg_screen2</item>
        <item name="android:colorBackground">@color/bg_screen2</item>
    <item name="android:bottomBright">@color/bg_screen2</item>
    <item name="android:bottomDark">@color/bg_screen2</item>
    <item name="android:bottomMedium">@color/bg_screen2</item>
    <item name="android:centerBright">@color/bg_screen2</item>
    <item name="android:centerDark">@color/bg_screen2</item>
    <item name="android:centerMedium">@color/bg_screen2</item>
    <item name="android:topBright">@color/bg_screen2</item>
    <item name="android:topDark">@color/bg_screen2</item>
    </style>
</resources>